@font-face{
	font-family: 'Vegur-Regular';
	src: url('../fonts/Vegur-Regular.otf') format('opentype');
	font-weight: normal;
	font-style: normal;
}

@font-face{
	font-family: 'Vegur-Bold';
	src: url('../fonts/Vegur-Bold.otf') format('opentype');
	font-weight: bold;
	font-style: normal;
}

@font-face{
	font-family: 'Bentham';
	src: url('../fonts/Bentham.otf') format('opentype');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

html
	width 100%

body 
	width 100%



.inicio

	background url('../images/background.jpg') no-repeat center center
	background-attachment scroll
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	width 100%
	position relative
	overflow hidden

	&:after
		content "\e605"
		font-family 'icomoon'
		font-weight normal
		font-size 1.5em
		color white
		border solid 1px white
		border-radius 50%
		padding 0 0 -15px 0
		position absolute
		left 50%
		top 83%
		margin 0 0 0 -15px

	.logo
		
		margin-left -50px

		img 	
			width 410px	
			margin -50px auto 0 auto
			display block

	.lema
		font-family 'Vegur-Bold'
		font-weight bold
		font-size 1.3em
		color white
		text-align center
		width 14em
		margin -2.5em auto
		display block
		border solid 5px white
		padding 2.7em 0.1em

	address
		width 16em
		text-align center
		margin 8em auto
		padding 2em 0
		a 
			text-decoration none
			font-family 'Vegur-Regular'
			font-style normal
			color white
			font-size 0.96em
			display block
			margin-bottom 1em

		.direccion
			&:before
				content "\e600"
				
				font-family 'icomoon'
				font-weight normal
				font-size 1.5em
				color white

		.telefono
			&:before
				content "\e606"
				
				font-family 'icomoon'
				font-weight normal
				font-size 1.5em
				color white


.boton
	position fixed
	display block
	background rgba(black,0.9)
	text-decoration none
	top 45px
	right 135px
	padding 8px
	z-index 2
	border-radius 10px

	&:before
		content "\e601"
		color grey
		font-family 'icomoon'
		font-style normal
		font-size 2em


.menu
	background rgba(black,0.9)
	width 150px
	top 0
	right 0
	position fixed
	height 100% 
	z-index 1

	ul 
		margin-top 150px
		li
			display block
			margin 0 0 20px -2px

			a
				text-decoration none
				color white
				font-family 'Bentham'
				font-style normal
				font-size 0.8em

	.media
		margin 50px 0 0 40px

		a
			text-decoration none
			position relative
			font-size 1.3em
			padding-right 10px
			
		.g
			&:before
				content "\e60a"

				color white
				font-family 'icomoon'
				font-style normal



		.f 
			&:before
				content "\e609"

				color white
				font-family 'icomoon'
				font-style normal


